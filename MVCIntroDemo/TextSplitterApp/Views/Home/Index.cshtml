@model TextViewModel

@using TextSplitterApp.Models.TextModels

@{
    ViewData["Title"] = "Text Splitter";
}

<form asp-controller="Home" asp-action="Split" method="post">
    <div class="col-12">
        <input asp-for="@Model.Text" class="mr-2">
        <br>
        <span asp-validation-for="@Model.Text" class="small text-danger col-2" ></span>
        <br>
        <button class="btn btn-primary" type="submit">Spli text</button>
    </div>

    <div class="col-2 mt-3">
        <textarea rows="10">@Model.SplitText</textarea>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial">
}