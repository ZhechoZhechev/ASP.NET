@using System.Globalization;

@model AddDestinationViewModel

<h2>Add new Destination</h2>
<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="@Model.DestinationName">Destination Name:</label>
        <input asp-for="@Model.DestinationName" type="text" placeholder="Destination Name" id="destinationName" name="DestinationName" />
        <span asp-validation-for="@Model.DestinationName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Origin">Origin:</label>
        <input asp-for="@Model.Origin" type="text" placeholder="Origin" id="origin" name="Origin" />
        <span asp-validation-for="@Model.Origin" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Date and Time:</label>
        <input asp-for="@Model.DateTime" type="datetime-local" id="date" name="DateTime" asp-format="{0:MM/dd/yyyyTHH:mm}" />

        @{
            var dateTimeValue = Model.DateTime.ToString("MM/dd/yyyyTHH:mm", CultureInfo.InvariantCulture);
            var dateValue = dateTimeValue.Substring(0, 10);
            var timeValue = dateTimeValue.Substring(11, 5);

        }

        <input asp-for="@Model.Date" type="hidden" name="Date" value="@dateValue" />
        <input asp-for="@Model.Time" type="hidden" name="Time" value="@timeValue" />
        <span asp-validation-for="@Model.DateTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.ImageUrl">Image:</label>
        <input asp-for="@Model.ImageUrl" type="text" id="imageUrl" name="ImageUrl" />
        <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
    </div>
    <input type="submit" class="create" value="Create">
</form>